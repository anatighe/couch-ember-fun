{{#if isEditing}}
  <p><button {{action 'doneEditing'}}>Done</button></p>
  <p>{{input type="text" value=song.title placeholder="Song Title" class="form-control"}}</p>
  <p>{{input type="text" value=song.composer placeholder="Song Composer" class="form-control"}}</p>

  <p><button {{action 'deleteSong'}}>Delete</button></p>
{{else}}
  <p><button {{action 'edit'}}>Edit</button></p>
{{/if}}